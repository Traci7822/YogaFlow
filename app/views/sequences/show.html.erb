<%= render "layouts/go_back" %>

<div class="description" align="center">
  <h1><%= @sequence.title %></h1>
  <ul style="list-style: none;">
    <li><%= @sequence.number_of_poses %> Poses</li>
    <li>Focus: <%= @sequence.focus %></li>
    <li>Difficulty Rating: <%= @sequence.difficulty %></li>
  </ul>

  <h2>
    <% @sequence.poses.each do |pose| %>
      <h3><%= pose.name %> - <%= pose.description %></h3>
    <% end %>
  </h2>
</div>
