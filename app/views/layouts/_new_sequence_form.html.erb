<%= form_for(@sequence) do |f| %>
  <h3>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </h3>
  <br />
  <br />
  <h3>
    <%= f.label :difficulty %>
  </h3>
  <h5>1-5 scale, 1 = easiest, 5 = hardest</h5>
  <%= f.select :difficulty, options_for_select(1..5) %>
  <br />
  <br />
  <%= f.fields_for :poses_attributes do |pose_builder| %>
  <%= pose_builder.label :add_poses_to_this_sequence %>
  <br />
  <%= pose_builder.collection_check_boxes(:pose_id, @poses, :id, :name) %>
  <% end %>
  <br />
  <br />
  <%= f.submit %>
<% end %>
